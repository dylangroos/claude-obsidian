{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/plugins/obsidian-vault/hooks/session-start.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/plugins/obsidian-vault/hooks/session-end.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
